{
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "module": "es6",
        "target": "es2020",
        "jsx": "react",
        "allowJs": false,
        "moduleResolution": "node",
        "resolveJsonModule": true
    }
}